<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.ExchangeRulesMapper">
    
    <resultMap type="ExchangeRules" id="ExchangeRulesResult">
        <result property="id"    column="id"    />
        <result property="rules"    column="rules"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectExchangeRulesVo">
        select id, rules, create_by, create_time, update_by, update_time from exchange_rules
    </sql>

    <select id="selectExchangeRulesList" parameterType="ExchangeRules" resultMap="ExchangeRulesResult">
        <include refid="selectExchangeRulesVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectExchangeRulesById" parameterType="Long" resultMap="ExchangeRulesResult">
        <include refid="selectExchangeRulesVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertExchangeRules" parameterType="ExchangeRules">
        insert into exchange_rules
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="rules != null and rules != ''">rules,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="rules != null and rules != ''">#{rules},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateExchangeRules" parameterType="ExchangeRules">
        update exchange_rules
        <trim prefix="SET" suffixOverrides=",">
            <if test="rules != null and rules != ''">rules = #{rules},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExchangeRulesById" parameterType="Long">
        delete from exchange_rules where id = #{id}
    </delete>

    <delete id="deleteExchangeRulesByIds" parameterType="String">
        delete from exchange_rules where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>