<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.SerialCardMapper">

    <resultMap type="SerialCard" id="SerialCardResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="orderCode"    column="order_code"    />
        <result property="cardCode"    column="card_code"    />
        <result property="cardType"    column="card_type"    />
        <result property="operatorId"    column="operator_id"    />
        <result property="operatorName"    column="operator_name"    />
        <result property="purchaseState"    column="purchase_state"    />
        <result property="redemptionStatus"    column="redemption_status"    />
        <result property="redemptionStatusName"    column="redemptionStatusName"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSerialCardVo">
        select id, order_id, order_code, card_code, card_type, operator_id, operator_name, purchase_state, redemption_status,IF(redemption_status='0','未使用','已使用') as redemptionStatusName, create_by, create_time, update_by, update_time from serial_card
    </sql>

    <select id="selectSerialCardList" parameterType="SerialCard" resultMap="SerialCardResult">
        <include refid="selectSerialCardVo"/>
        <where>
            <if test="orderId != null  and orderId != ''"> and order_id = #{orderId}</if>
            <if test="orderCode != null  and orderCode != ''"> and order_code = #{orderCode}</if>
            <if test="cardCode != null  and cardCode != ''"> and card_code = #{cardCode}</if>
            <if test="cardType != null  and cardType != ''"> and card_type = #{cardType}</if>
            <if test="operatorId != null  and operatorId != ''"> and operator_id = #{operatorId}</if>
            <if test="operatorName != null  and operatorName != ''"> and operator_name like concat('%', #{operatorName}, '%')</if>
            <if test="purchaseState != null  and purchaseState != ''"> and purchase_state = #{purchaseState}</if>
            <if test="redemptionStatus != null  and redemptionStatus != ''"> and redemption_status = #{redemptionStatus}</if>
        </where>
        order by create_time desc,CAST(card_type AS UNSIGNED) asc
    </select>

    <!--根据卡号获取卡信息-->
    <select id="selectSerialCardByCardCode" parameterType="SerialCard" resultMap="SerialCardResult">
        <include refid="selectSerialCardVo"/>
        <where>
            <if test="cardCode != null  and cardCode != ''"> and card_code = #{cardCode}</if>
        </where>
    </select>

    <select id="selectSerialCardById" parameterType="Long" resultMap="SerialCardResult">
        <include refid="selectSerialCardVo"/>
        where id = #{id}
    </select>

    <insert id="insertSerialCard" parameterType="SerialCard" useGeneratedKeys="true" keyProperty="id">
        insert into serial_card
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="orderCode != null">order_code,</if>
            <if test="cardCode != null">card_code,</if>
            <if test="cardType != null">card_type,</if>
            <if test="operatorId != null">operator_id,</if>
            <if test="operatorName != null">operator_name,</if>
            <if test="purchaseState != null">purchase_state,</if>
            <if test="redemptionStatus != null">redemption_status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="orderCode != null">#{orderCode},</if>
            <if test="cardCode != null">#{cardCode},</if>
            <if test="cardType != null">#{cardType},</if>
            <if test="operatorId != null">#{operatorId},</if>
            <if test="operatorName != null">#{operatorName},</if>
            <if test="purchaseState != null">#{purchaseState},</if>
            <if test="redemptionStatus != null">#{redemptionStatus},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSerialCard" parameterType="SerialCard">
        update serial_card
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="orderCode != null">order_code = #{orderCode},</if>
            <if test="cardCode != null">card_code = #{cardCode},</if>
            <if test="cardType != null">card_type = #{cardType},</if>
            <if test="operatorId != null">operator_id = #{operatorId},</if>
            <if test="operatorName != null">operator_name = #{operatorName},</if>
            <if test="purchaseState != null">purchase_state = #{purchaseState},</if>
            <if test="redemptionStatus != null">redemption_status = #{redemptionStatus},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSerialCardById" parameterType="Long">
        delete from serial_card where id = #{id}
    </delete>

    <delete id="deleteSerialCardByIds" parameterType="String">
        delete from serial_card where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectCardCodeList" resultType="String">
        select
        card_code
        from
        serial_card
    </select>
</mapper>
