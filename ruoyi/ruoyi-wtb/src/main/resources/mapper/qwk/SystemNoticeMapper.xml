<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.SystemNoticeMapper">
    
    <resultMap type="SystemNotice" id="SystemNoticeResult">
        <result property="id"    column="id"    />
        <result property="notificationTitle"    column="notification_title"    />
        <result property="notificationContent"    column="notification_content"    />
        <result property="notifyTitle"    column="notify_title"    />
        <result property="messageBody"    column="message_body"    />
        <result property="userId"    column="user_id"    />
        <result property="isAll"    column="is_all"    />
        <result property="state"    column="state"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSystemNoticeVo">
        select id, notification_title, notification_content, notify_title, message_body, user_id, is_all, state, create_by, create_time, update_by, update_time, remark from system_notice
    </sql>

    <select id="selectSystemNoticeList" parameterType="SystemNotice" resultMap="SystemNoticeResult">
        <include refid="selectSystemNoticeVo"/>
        <where>  
            <if test="notificationTitle != null  and notificationTitle != ''"> and notification_title like concat('%', #{notificationTitle}, '%')</if>
            <if test="notificationContent != null  and notificationContent != ''"> and notification_content = #{notificationContent}</if>
            <if test="notifyTitle != null  and notifyTitle != ''"> and notify_title like concat('%', #{notifyTitle}, '%')</if>
            <if test="messageBody != null  and messageBody != ''"> and message_body = #{messageBody}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="isAll != null  and isAll != ''"> and is_all = #{isAll}</if>
            <if test="state != null  and state != ''"> and state = #{state}</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by like concat('%', #{updateBy}, '%')</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectSystemNoticeById" parameterType="Long" resultMap="SystemNoticeResult">
        <include refid="selectSystemNoticeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSystemNotice" parameterType="SystemNotice">
        insert into system_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="notificationTitle != null">notification_title,</if>
            <if test="notificationContent != null">notification_content,</if>
            <if test="notifyTitle != null">notify_title,</if>
            <if test="messageBody != null">message_body,</if>
            <if test="userId != null">user_id,</if>
            <if test="isAll != null">is_all,</if>
            <if test="state != null">state,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="notificationTitle != null">#{notificationTitle},</if>
            <if test="notificationContent != null">#{notificationContent},</if>
            <if test="notifyTitle != null">#{notifyTitle},</if>
            <if test="messageBody != null">#{messageBody},</if>
            <if test="userId != null">#{userId},</if>
            <if test="isAll != null">#{isAll},</if>
            <if test="state != null">#{state},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSystemNotice" parameterType="SystemNotice">
        update system_notice
        <trim prefix="SET" suffixOverrides=",">
            <if test="notificationTitle != null">notification_title = #{notificationTitle},</if>
            <if test="notificationContent != null">notification_content = #{notificationContent},</if>
            <if test="notifyTitle != null">notify_title = #{notifyTitle},</if>
            <if test="messageBody != null">message_body = #{messageBody},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="isAll != null">is_all = #{isAll},</if>
            <if test="state != null">state = #{state},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSystemNoticeById" parameterType="Long">
        delete from system_notice where id = #{id}
    </delete>

    <delete id="deleteSystemNoticeByIds" parameterType="String">
        delete from system_notice where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getNoticeByUserId" parameterType="long" resultMap="SystemNoticeResult">
        <include refid="selectSystemNoticeVo"/>
        WHERE user_id = #{userId} OR is_all = '0' AND state = '1'
        ORDER BY create_time DESC LIMIT 20
    </select>


</mapper>