<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.ExchangeRecordsMapper">
    
    <resultMap type="ExchangeRecords" id="ExchangeRecordsResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="spendType"    column="spend_type"    />
        <result property="spend"    column="spend"    />
        <result property="receiveType"    column="receive_type"    />
        <result property="receive"    column="receive"    />
        <result property="state"    column="state"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectExchangeRecordsVo">
        select id, order_id, user_id, user_name, spend_type, spend, receive_type, receive, state, create_by, create_time, update_by, update_time, remark from exchange_records
    </sql>

    <select id="selectExchangeRecordsList" parameterType="ExchangeRecords" resultMap="ExchangeRecordsResult">
        <include refid="selectExchangeRecordsVo"/>
        <where>  
            <if test="orderId != null "> and order_id like concat('%', #{orderId}, '%')</if>
            <if test="userId != null "> and user_id like concat('%', #{userId}, '%')</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="spendType != null  and spendType != ''"> and spend_type = #{spendType}</if>
            <if test="params.beginSpend != null and params.beginSpend != '' and params.endSpend != null and params.endSpend != ''"> and CONVERT(spend, DECIMAL(9,2)) between #{params.beginSpend} and #{params.endSpend}</if>
            <if test="receiveType != null  and receiveType != ''"> and receive_type = #{receiveType}</if>
            <if test="receive != null  and receive != ''"> and receive = #{receive}</if>
            <if test="state != null  and state != ''"> and state = #{state}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by = #{updateBy}</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectExchangeRecordsById" parameterType="Long" resultMap="ExchangeRecordsResult">
        <include refid="selectExchangeRecordsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertExchangeRecords" parameterType="ExchangeRecords" useGeneratedKeys="true" keyProperty="id">
        insert into exchange_records
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="spendType != null">spend_type,</if>
            <if test="spend != null">spend,</if>
            <if test="receiveType != null">receive_type,</if>
            <if test="receive != null">receive,</if>
            <if test="state != null">state,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="spendType != null">#{spendType},</if>
            <if test="spend != null">#{spend},</if>
            <if test="receiveType != null">#{receiveType},</if>
            <if test="receive != null">#{receive},</if>
            <if test="state != null">#{state},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateExchangeRecords" parameterType="ExchangeRecords">
        update exchange_records
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="spendType != null">spend_type = #{spendType},</if>
            <if test="spend != null">spend = #{spend},</if>
            <if test="receiveType != null">receive_type = #{receiveType},</if>
            <if test="receive != null">receive = #{receive},</if>
            <if test="state != null">state = #{state},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExchangeRecordsById" parameterType="Long">
        delete from exchange_records where id = #{id}
    </delete>

    <delete id="deleteExchangeRecordsByIds" parameterType="String">
        delete from exchange_records where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>