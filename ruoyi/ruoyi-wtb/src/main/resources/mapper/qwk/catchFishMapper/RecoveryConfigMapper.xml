<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.RecoveryConfigMapper">
    
    <resultMap type="RecoveryConfig" id="RecoveryConfigResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="recovery"    column="recovery"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectRecoveryConfigVo">
        select id, user_id, recovery, create_by, create_time, update_by, update_time, remark from recovery_config
    </sql>

    <select id="selectRecoveryConfigList" parameterType="RecoveryConfig" resultMap="RecoveryConfigResult">
        <include refid="selectRecoveryConfigVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="recovery != null  and recovery != ''"> and recovery = #{recovery}</if>
        </where>
    </select>
    
    <select id="selectRecoveryConfigById" parameterType="Long" resultMap="RecoveryConfigResult">
        <include refid="selectRecoveryConfigVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertRecoveryConfig" parameterType="RecoveryConfig">
        insert into recovery_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="recovery != null and recovery != ''">recovery,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="recovery != null and recovery != ''">#{recovery},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateRecoveryConfig" parameterType="RecoveryConfig">
        update recovery_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="recovery != null and recovery != ''">recovery = #{recovery},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRecoveryConfigById" parameterType="Long">
        delete from recovery_config where id = #{id}
    </delete>

    <delete id="deleteRecoveryConfigByIds" parameterType="String">
        delete from recovery_config where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>