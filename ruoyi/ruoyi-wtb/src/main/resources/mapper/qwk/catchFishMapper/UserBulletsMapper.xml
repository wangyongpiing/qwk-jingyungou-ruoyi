<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.UserBulletsMapper">
    
    <resultMap type="UserBullets" id="UserBulletsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="bulletsId"    column="bullets_id"    />
        <result property="bulletsNum"    column="bullets_num"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectUserBulletsVo">
        select id, user_id, bullets_id, bullets_num, create_by, create_time, update_by, update_time, remark from user_bullets
    </sql>

    <select id="selectUserBulletsList" parameterType="UserBullets" resultMap="UserBulletsResult">
        <include refid="selectUserBulletsVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="bulletsId != null "> and bullets_id = #{bulletsId}</if>
            <if test="bulletsNum != null "> and bullets_num = #{bulletsNum}</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by like concat('%', #{updateBy}, '%')</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectUserBulletsById" parameterType="Long" resultMap="UserBulletsResult">
        <include refid="selectUserBulletsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertUserBullets" parameterType="UserBullets">
        <selectKey keyProperty="id" order="AFTER" resultType="Long">
              SELECT LAST_INSERT_ID()
        </selectKey>
        insert into user_bullets
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="bulletsId != null">bullets_id,</if>
            <if test="bulletsNum != null">bullets_num,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="bulletsId != null">#{bulletsId},</if>
            <if test="bulletsNum != null">#{bulletsNum},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateUserBullets" parameterType="UserBullets">
        update user_bullets
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="bulletsId != null">bullets_id = #{bulletsId},</if>
            <if test="bulletsNum != null">bullets_num = #{bulletsNum},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserBulletsById" parameterType="Long">
        delete from user_bullets where id = #{id}
    </delete>

    <delete id="deleteUserBulletsByIds" parameterType="String">
        delete from user_bullets where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

<!--    根据用户id,子弹编号查询用户子弹数量-->
    <select id="selectUserBulletsByUserId" parameterType="Long" resultMap="UserBulletsResult">
        <include refid="selectUserBulletsVo"/>
        where user_id = #{userId} and bullets_id = #{bulletsId}
    </select>

    <!--根据用户id查询用户所有子弹信息-->
    <select id="selectUserBulletsAllByUserId" parameterType="Long" resultMap="UserBulletsResult">
        <include refid="selectUserBulletsVo"/>
        where user_id = #{userId}
    </select>

    <delete id="deleteUserBulletsByUserId" parameterType="Long">
        delete from user_bullets where user_id in
        <foreach collection="array" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

</mapper>