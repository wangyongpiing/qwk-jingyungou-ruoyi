<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.ShotsNumMapper">
    
    <resultMap type="ShotsNum" id="ShotsNumResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="fieldId"    column="field_id"    />
        <result property="num"    column="num"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectShotsNumVo">
        select id, user_id, field_id, num, create_by, create_time, update_by, update_time, remark from shots_num
    </sql>

    <select id="selectShotsNumList" parameterType="ShotsNum" resultMap="ShotsNumResult">
        <include refid="selectShotsNumVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="fieldId != null "> and field_id = #{fieldId}</if>
            <if test="num != null "> and num = #{num}</if>
        </where>
    </select>
    
    <select id="selectShotsNumById" parameterType="Long" resultMap="ShotsNumResult">
        <include refid="selectShotsNumVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertShotsNum" parameterType="ShotsNum" useGeneratedKeys="true" keyProperty="id">
        insert into shots_num
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="fieldId != null">field_id,</if>
            <if test="num != null">num,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="fieldId != null">#{fieldId},</if>
            <if test="num != null">#{num},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateShotsNum" parameterType="ShotsNum">
        update shots_num
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="fieldId != null">field_id = #{fieldId},</if>
            <if test="num != null">num = #{num},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteShotsNumById" parameterType="Long">
        delete from shots_num where id = #{id}
    </delete>

    <delete id="deleteShotsNumByIds" parameterType="String">
        delete from shots_num where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectShotsNumByUserId" resultMap="ShotsNumResult">
        <include refid="selectShotsNumVo"/>
        where user_id = #{userId} and field_id = #{fieldId} limit 1
    </select>

</mapper>