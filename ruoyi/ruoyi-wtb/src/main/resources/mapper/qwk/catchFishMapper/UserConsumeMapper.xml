<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.UserConsumeMapper">
    
    <resultMap type="UserConsume" id="UserConsumeResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="consume"    column="consume"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectUserConsumeVo">
        select id, user_id, consume, create_by, create_time, update_by, update_time, remark from user_consume
    </sql>

    <select id="selectUserConsumeList" parameterType="UserConsume" resultMap="UserConsumeResult">
        <include refid="selectUserConsumeVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="consume != null  and consume != ''"> and consume = #{consume}</if>
        </where>
    </select>
    
    <select id="selectUserConsumeById" parameterType="Long" resultMap="UserConsumeResult">
        <include refid="selectUserConsumeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertUserConsume" parameterType="UserConsume" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" order="AFTER" resultType="Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into user_consume
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="consume != null and consume != ''">consume,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="consume != null and consume != ''">#{consume},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateUserConsume" parameterType="UserConsume">
        update user_consume
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="consume != null and consume != ''">consume = #{consume},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserConsumeById" parameterType="Long">
        delete from user_consume where id = #{id}
    </delete>

    <delete id="deleteUserConsumeByIds" parameterType="String">
        delete from user_consume where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <select id="selectUserConsumeByUserId" parameterType="Long" resultMap="UserConsumeResult">
        <include refid="selectUserConsumeVo"/>
        where user_id = #{userId}
    </select>

</mapper>