<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.BlindBoxProbabilityMapper">
    
    <resultMap type="BlindBoxProbability" id="BlindBoxProbabilityResult">
        <result property="id"    column="id"    />
        <result property="probability"    column="probability"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBlindBoxProbabilityVo">
        select id, probability, create_by, create_time, update_by, update_time, remark from blind_box_probability
    </sql>

    <select id="selectBlindBoxProbabilityList" parameterType="BlindBoxProbability" resultMap="BlindBoxProbabilityResult">
        <include refid="selectBlindBoxProbabilityVo"/>
        <where>  
            <if test="probability != null "> and probability = #{probability}</if>
        </where>
    </select>
    
    <select id="selectBlindBoxProbabilityById" parameterType="Long" resultMap="BlindBoxProbabilityResult">
        <include refid="selectBlindBoxProbabilityVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBlindBoxProbability" parameterType="BlindBoxProbability" useGeneratedKeys="true" keyProperty="id">
        insert into blind_box_probability
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="probability != null">probability,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="probability != null">#{probability},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBlindBoxProbability" parameterType="BlindBoxProbability">
        update blind_box_probability
        <trim prefix="SET" suffixOverrides=",">
            <if test="probability != null">probability = #{probability},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBlindBoxProbabilityById" parameterType="Long">
        delete from blind_box_probability where id = #{id}
    </delete>

    <delete id="deleteBlindBoxProbabilityByIds" parameterType="String">
        delete from blind_box_probability where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>