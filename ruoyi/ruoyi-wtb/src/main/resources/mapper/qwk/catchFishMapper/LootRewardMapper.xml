<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.blindBox.mapper.LootRewardMapper">
    
    <resultMap type="LootReward" id="LootRewardResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="goodsId"    column="goods_id"    />
        <result property="dropRewardWeight"    column="drop_reward_weight"    />
        <result property="rarityLevel"    column="rarity_level"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLootRewardVo">
        select id, name, goods_id, drop_reward_weight, rarity_level, create_by, create_time, update_by, update_time, remark from loot_reward
    </sql>

    <select id="selectLootRewardList" parameterType="LootReward" resultMap="LootRewardResult">
        <include refid="selectLootRewardVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="goodsId != null "> and goods_id = #{goodsId}</if>
            <if test="dropRewardWeight != null "> and drop_reward_weight = #{dropRewardWeight}</if>
            <if test="rarityLevel != null  and rarityLevel != ''"> and rarity_level = #{rarityLevel}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by = #{updateBy}</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectLootRewardById" parameterType="Long" resultMap="LootRewardResult">
        <include refid="selectLootRewardVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertLootReward" parameterType="LootReward" useGeneratedKeys="true" keyProperty="id">
        insert into loot_reward
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="dropRewardWeight != null">drop_reward_weight,</if>
            <if test="rarityLevel != null">rarity_level,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="goodsId != null">#{goodsId},</if>
            <if test="dropRewardWeight != null">#{dropRewardWeight},</if>
            <if test="rarityLevel != null">#{rarityLevel},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLootReward" parameterType="LootReward">
        update loot_reward
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="goodsId != null">goods_id = #{goodsId},</if>
            <if test="dropRewardWeight != null">drop_reward_weight = #{dropRewardWeight},</if>
            <if test="rarityLevel != null">rarity_level = #{rarityLevel},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLootRewardById" parameterType="Long">
        delete from loot_reward where id = #{id}
    </delete>

    <delete id="deleteLootRewardByIds" parameterType="String">
        delete from loot_reward where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>