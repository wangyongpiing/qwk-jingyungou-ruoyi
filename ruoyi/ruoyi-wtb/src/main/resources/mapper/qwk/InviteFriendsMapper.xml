<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.InviteFriendsMapper">
    
    <resultMap type="InviteFriends" id="InviteFriendsResult">
        <result property="id"    column="id"    />
        <result property="ip"    column="ip"    />
        <result property="inviterId"    column="inviter_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectInviteFriendsVo">
        select id, ip, inviter_id, create_by, create_time, update_by, update_time, remark from invite_friends
    </sql>

    <select id="selectInviteFriendsList" parameterType="InviteFriends" resultMap="InviteFriendsResult">
        <include refid="selectInviteFriendsVo"/>
        <where>  
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="inviterId != null "> and inviter_id = #{inviterId}</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by like concat('%', #{updateBy}, '%')</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectInviteFriendsById" parameterType="Long" resultMap="InviteFriendsResult">
        <include refid="selectInviteFriendsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertInviteFriends" parameterType="InviteFriends" useGeneratedKeys="true" keyProperty="id">
        insert into invite_friends
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ip != null">ip,</if>
            <if test="inviterId != null">inviter_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ip != null">#{ip},</if>
            <if test="inviterId != null">#{inviterId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateInviteFriends" parameterType="InviteFriends">
        update invite_friends
        <trim prefix="SET" suffixOverrides=",">
            <if test="ip != null">ip = #{ip},</if>
            <if test="inviterId != null">inviter_id = #{inviterId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteInviteFriendsById" parameterType="Long">
        delete from invite_friends where id = #{id}
    </delete>

    <delete id="deleteInviteFriendsByIds" parameterType="String">
        delete from invite_friends where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectInviteFriendsByIp" parameterType="string" resultMap="InviteFriendsResult">
        <include refid="selectInviteFriendsVo"/>
        where ip = #{ip}
    </select>

    <delete id="deleteByCreateTime">
        DELETE FROM invite_friends
        WHERE create_time &lt; NOW() - INTERVAL 5 MINUTE;
    </delete>

</mapper>