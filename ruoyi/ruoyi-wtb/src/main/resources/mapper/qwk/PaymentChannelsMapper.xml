<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.PaymentChannelsMapper">
    
    <resultMap type="PaymentChannels" id="PaymentChannelsResult">
        <result property="id"    column="id"    />
        <result property="channels"    column="channels"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectPaymentChannelsVo">
        select id, channels, status, create_by, create_time, update_by, update_time, remark from payment_channels
    </sql>

    <select id="selectPaymentChannelsList" parameterType="PaymentChannels" resultMap="PaymentChannelsResult">
        <include refid="selectPaymentChannelsVo"/>
        <where>  
            <if test="channels != null  and channels != ''"> and channels like concat('%', #{channels}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by like concat('%', #{updateBy}, '%')</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectPaymentChannelsById" parameterType="Long" resultMap="PaymentChannelsResult">
        <include refid="selectPaymentChannelsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPaymentChannels" parameterType="PaymentChannels" useGeneratedKeys="true" keyProperty="id">
        insert into payment_channels
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="channels != null and channels != ''">channels,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="channels != null and channels != ''">#{channels},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updatePaymentChannels" parameterType="PaymentChannels">
        update payment_channels
        <trim prefix="SET" suffixOverrides=",">
            <if test="channels != null and channels != ''">channels = #{channels},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePaymentChannelsById" parameterType="Long">
        delete from payment_channels where id = #{id}
    </delete>

    <delete id="deletePaymentChannelsByIds" parameterType="String">
        delete from payment_channels where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectByStatusList"  resultMap="PaymentChannelsResult">
        <include refid="selectPaymentChannelsVo"/>
        where status = '0'
    </select>

</mapper>