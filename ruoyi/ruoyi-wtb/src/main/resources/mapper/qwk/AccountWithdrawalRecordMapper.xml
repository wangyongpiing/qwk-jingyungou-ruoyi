<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.qwk.mapper.AccountWithdrawalRecordMapper">

    <resultMap type="AccountWithdrawalRecord" id="AccountWithdrawalRecordResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="withdrawalAmount"    column="withdrawal_amount"    />
        <result property="isSuccess"    column="is_success"    />
        <result property="remark"    column="remark"    />
        <result property="type"    column="type"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="typeName"    column="typeName"    />
    </resultMap>

    <sql id="selectAccountWithdrawalRecordVo">
        select id, user_id, withdrawal_amount, is_success, remark, type,IF(type='1','支付宝','') as typeName, create_by, create_time, update_by, update_time from account_withdrawal_record
    </sql>

    <select id="selectAccountWithdrawalRecordList" parameterType="AccountWithdrawalRecord" resultMap="AccountWithdrawalRecordResult">
        <include refid="selectAccountWithdrawalRecordVo"/>
        <where>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="withdrawalAmount != null  and withdrawalAmount != ''"> and withdrawal_amount = #{withdrawalAmount}</if>
            <if test="isSuccess != null  and isSuccess != ''"> and is_success = #{isSuccess}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="createTime !=null"> and DATE_FORMAT(create_time,'%Y-%m-%d') = DATE_FORMAT(#{createTime},'%Y-%m-%d')</if>
        </where>
    </select>

    <select id="selectAccountWithdrawalRecordById" parameterType="Long" resultMap="AccountWithdrawalRecordResult">
        <include refid="selectAccountWithdrawalRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertAccountWithdrawalRecord" parameterType="AccountWithdrawalRecord" useGeneratedKeys="true" keyProperty="id">
        insert into account_withdrawal_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="withdrawalAmount != null">withdrawal_amount,</if>
            <if test="isSuccess != null">is_success,</if>
            <if test="remark != null">remark,</if>
            <if test="type != null">type,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="withdrawalAmount != null">#{withdrawalAmount},</if>
            <if test="isSuccess != null">#{isSuccess},</if>
            <if test="remark != null">#{remark},</if>
            <if test="type != null">#{type},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAccountWithdrawalRecord" parameterType="AccountWithdrawalRecord">
        update account_withdrawal_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="withdrawalAmount != null">withdrawal_amount = #{withdrawalAmount},</if>
            <if test="isSuccess != null">is_success = #{isSuccess},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="type != null">type = #{type},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAccountWithdrawalRecordById" parameterType="Long">
        delete from account_withdrawal_record where id = #{id}
    </delete>

    <delete id="deleteAccountWithdrawalRecordByIds" parameterType="String">
        delete from account_withdrawal_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
